<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Кнопка открытия списка планов -->
        <androidx.cardview.widget.CardView
            android:id="@+id/planButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="#FFC107">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:layout_gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:text="Планы" />
            <ImageView
                android:id="@+id/workoutplanTitleImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/icons8_workout_plan_66"
                android:layout_gravity="right"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <!-- Кнопка открытия списка дневников -->
        <androidx.cardview.widget.CardView
            android:id="@+id/diaryButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="#2196F3">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_margin="8dp"
                android:layout_gravity="center_vertical"
                android:textColor="#FFFFFF"
                android:text="Дневник" />
            <ImageView
                android:id="@+id/diaryTitleImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/icons8_notebook_emoji_48"
                android:layout_gravity="right"
                android:layout_marginRight="4dp"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:cardCornerRadius="24dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#EEEEEE"
        android:background="@color/black">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Информация о вашей текущей тренировке: временно недоступна"
            android:layout_margin="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/fitness_apps"
            android:scaleType="fitCenter" />
        <!-- Блок с информацией по текущей тренировке -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="#EEEEEE">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Информация о вашей текущей тренировке: временно недоступно"
                android:layout_margin="4dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/fitness_apps"
                android:scaleType="fitCenter" />

        </FrameLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
